- form_for [:admin, @fabulator_constraint], :html => {:onsubmit_status => onsubmit_status(@fabulator_constraint)} do |f|
  = f.hidden_field :lock_version
  = render_region :form_top
  .form_area
    - render_region :form do |form|
      - form.edit_title do
        %p.title
          = f.label :name
          = f.text_field :name, :class => 'textbox activate', :maxlength => 100
      - form.edit_description do
        %p.content
          = f.label :description, "Description"
          ~ f.text_area :description, :class => "textarea large", :style => "width: 100%"
      .row
      - form.edit_fn do
        %p.content
          = f.label :definition, "Definition"
          = f.text_area :definition, :class => "textarea large", :style => "width: 100%"

  - render_region :form_bottom do |form_bottom|
    - form_bottom.edit_buttons do
      %p.buttons{:style=>"clear: left"}
        = save_model_button(@fabulator_constraint, :label => 'Create Constraint')
        = save_model_and_continue_editing_button(@fabulator_constraint)
        or
        = link_to 'Cancel', admin_fabulator_constraints_url
    - form_bottom.edit_timestamp do
      %p.updated_line
        = updated_stamp @fabulator_constraint
