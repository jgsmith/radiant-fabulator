- form_for [:admin, @fabulator_filter], :html => {:onsubmit_status => onsubmit_status(@fabulator_filter)} do |f|
  = f.hidden_field :lock_version
  = render_region :form_top
  .form_area
    - render_region :form do |form|
      - form.edit_title do
        %p.title
          = f.label :name
          = f.text_field :name, :class => 'textbox activate', :maxlength => 100
      - form.edit_description do
        %p.content
          = f.label :description, "Description"
          ~ f.text_area :description, :class => "textarea large", :style => "width: 100%"
      .row
      - form.edit_lua_fn do
        %p.content
          = f.label :lua_fn, "Lua Function"
          = f.text_area :lua_fn, :class => "textarea large", :style => "width: 100%"
  - render_region :form_bottom do |form_bottom|
    - form_bottom.edit_buttons do
      %p.buttons{:style=>"clear: left"}
        = save_model_button(@fabulator_filter, :label => 'Create Filter')
        = save_model_and_continue_editing_button(@fabulator_filter)
        or
        = link_to 'Cancel', admin_fabulator_filters_url
    - form_bottom.edit_timestamp do
      %p.updated_line
        = updated_stamp @fabulator_filter
